{
    "swagger": "2.0",
    "info": {
      "title": "Ticket Booking API",
      "description": "One space portal for organizers and clients to provide and book tickets of a particular show/movie",
      "version": "1.0"
    },
    "produces": ["application/json"],
    "host": "localhost:5000",
    "basePath": "/",
    "paths": {
      "/": {
        "get": {
          "tags": ["Testing Route"],
          "description": "Testing Route",
          "summary": "Welcome Route",
          "parameters": [],
          "responses": {}
        }
      },
      "/api/authenticate/provider/register": {
        "post": {
          "tags": ["Authentication Routes"],
          "summary": "Registration Route For Provider",
          "description": "If you are an organizer please register here.",
          "parameters": [{
              "in": "body",
              "name": "body",
              "description": "Create a provider.",
              "schema": {
                  "$ref": "#/components/registerProvider"
              }
          }],
          "responses": {}
        }
      },
      "/api/authenticate/provider/login": {
        "post": {
          "tags": ["Authentication Routes"],
          "summary": "Login Route For Provider",
          "description": "If you are an organizer please login here.",
          "parameters": [{
              "in": "body",
              "name": "body",
              "description": "Provider login",
              "schema": {
                "$ref": "#/components/login"
            }
          }],
          "responses": {}
        }
      },
      "/api/authenticate/user/register": {
        "post": {
          "tags": ["Authentication Routes"],
          "summary": "Registration Route For User",
          "description": "If you are a customer please register here.",
          "parameters": [{
              "in": "body",
              "name": "body",
              "description": "Create a User.",
              "schema": {
                  "$ref": "#/components/registerUser"
              }
          }],
          "responses": {}
        }
      },
      "/api/authenticate/user/login": {
        "post": {
          "tags": ["Authentication Routes"],
          "summary": "Login Route For User",
          "description": "If you are a user please login here.",
          "parameters": [{
              "in": "body",
              "name": "body",
              "description": "User login",
              "schema": {
                "$ref": "#/components/login"
            }
          }],
          "responses": {}
        }
      },
      "/api/provider/shows": {
        "get": {
          "tags": ["Provider Routes"],
          "summary": "Route for listing all the shows of a provider",
          "description": "Authentication is done by passing header",
          "parameters": [ {
            "in": "header",
            "name": "Authorization",
            "description": "Authorization Header",
            "required": "true",
            "type": "string"
          }],
          "responses": {}
        },
        "post": {
            "tags": ["Provider Routes"],
            "summary": "Route for posting a new show",
            "description": "Authentication is done by passing header",
            "parameters": [ {
                "in": "body",
                "name": "body",
                "description": "Add Show",
                "schema": {
                    "$ref": "#/components/addShow"
                }
            },{
              "in": "header",
              "name": "Authorization",
              "description": "Authorization Header",
              "required": "true",
              "type": "string"
            }],
            "responses": {}
          }
      },
      "/api/provider/shows/{id}": {
        "get": {
            "tags": ["Provider Routes"],
            "summary": "Route for listing a particular shows of a provider",
            "description": "Authentication is done by passing header",
            "parameters": [ {
                "name": "id",
                "in": "path",
                "description": "ID of the show",
                "required": "true",
                "type": "string"
            },{
              "in": "header",
              "name": "Authorization",
              "description": "Authorization Header",
              "required": "true",
              "type": "string"
            }],
            "responses": {}
          },
          "delete": {
            "tags": ["Provider Routes"],
            "summary": "Route for deleting a show",
            "description": "Authentication is done by passing header",
            "parameters": [ {
                "name": "id",
                "in": "path",
                "description": "ID of the show",
                "required": "true",
                "type": "string"
            },{
              "in": "header",
              "name": "Authorization",
              "description": "Authorization Header",
              "required": "true",
              "type": "string"
            }],
            "responses": {}
          }
      },
      "/api/user/shows": {
        "get": {
            "tags": ["User Routes"],
            "summary": "Route for viewing all the shows.",
            "description": "All the shows are listed here.",
            "parameters": [],
            "responses": {}
        }
      },
      "/api/user/bookings": {
        "get": {
            "tags": ["User Routes"],
            "summary": "Route for viewing all the bookings of the user.",
            "description": "Authentication header is required",
            "parameters": [{
                "in": "header",
                "name": "Authorization",
                "description": "Authorization Header",
                "required": "true",
                "type": "string"
              }],
            "responses": {}
        }
      },
      "/api/user/shows/{id}": {
        "get": {
            "tags": ["User Routes"],
            "summary": "Route for viewing details of a particular show.",
            "description": "All the slots are listed here.",
            "parameters": [{
                "name": "id",
                "in": "path",
                "description": "ID of the show",
                "required": "true",
                "type": "string"
            }],
            "responses": {}
        }
      },
      "/api/user/shows/slots/{id}": {
        "get": {
            "tags": ["User Routes"],
            "summary": "Route for viewing slots for a particular show.",
            "description": "All the details of selected slot are listed here.",
            "parameters": [{
                "name": "id",
                "in": "path",
                "description": "ID of the slot",
                "required": "true",
                "type": "string"
            }],
            "responses": {}
        },
        "post": {
            "tags": ["User Routes"],
            "summary": "Route for booking seats.",
            "description": "Route for booking a particular seat",
            "parameters": [{
                "name": "id",
                "in": "path",
                "description": "ID of the slot",
                "required": "true",
                "type": "string"
            },{
                "in": "header",
                "name": "Authorization",
                "description": "Authorization Header",
                "required": "true",
                "type": "string"
            },{
                "in": "body",
                "name": "body",
                "description": "Create a provider.",
                "schema": {
                    "$ref": "#/components/buyTickets"
                }
            }],
            "responses": {}
        }
      }
    },
    "definitions": {
        "Client": {
            "type": "object",
            "properties": {
                "id": {
                    "type": "integer"
                },
                "email": {
                    "type": "string"
                },
                "password": {
                    "type": "string"
                },
                "firstName": {
                    "type": "string"
                },
                "lastName": {
                    "type": "string"
                },
                "mobile": {
                    "type": "string"
                }
            }
        },
        "Provider": {
            "type":"object",
            "properties":{
                "id": {
                    "type": "integer"
                },
                "email": {
                    "type": "string"
                },
                "password": {
                    "type": "string"
                },
                "firstName": {
                    "type": "string"
                },
                "lastName": {
                    "type": "string"
                },
                "org": {
                    "type": "string"
                },
                "halls": {
                    "type":"integer"
                }
            }
        },
        "Halls(hallsCapacity)": {
            "type":"object",
            "properties": {
                "id": {
                    "type": "integer"
                },
                "hallNumber": {
                    "type": "integer"
                },
                "provider_id": {
                    "type": "string"
                },
                "seats": {
                    "type": "integer"
                }
            }
        },
        "Show": {
            "type":"object",
            "properties":{
                "id": {
                    "type":"integer"
                },
                "name": {
                    "type":"string"
                },
                "info": {
                    "type":"string"
                },
                "provider_id": {
                    "type":"string"
                },
                "duration": {
                    "type":"interval"
                },
                "rated": {
                    "type":"string"
                },
                "ratings": {
                    "type":"double"
                }
            }
        },
        "HallBooking": {
            "type":"object",
            "properties":{
                "id": {
                    "type":"integer"
                },
                "show_id": {
                    "type":"integer"
                },
                "begTime": {
                    "type":"timestamp"
                },
                "hallNumber": {
                    "type":"integer"
                },
                "provider_id": {
                    "type":"string"
                }
            }
        },
        "Ticket Booking(booking)":{
            "type":"object",
            "properties": {
                "id": {
                    "type":"integer"
                },
                "show_id": {
                    "type":"integer"
                },
                "client_id": {
                    "type":"string"
                },
                "hallBooking_id": {
                    "type":"integer"
                },
                "seat": {
                    "type":"integer"
                },
                "begTime": {
                    "type":"timestamp"
                }
            }
        }
    },
    "components": {
        "registerProvider": {
            "type":"object",
            "properties":{
                "email": {
                    "type": "string"
                },
                "password": {
                    "type": "string"
                },
                "firstName": {
                    "type": "string"
                },
                "lastName": {
                    "type": "string"
                },
                "org": {
                    "type": "string"
                },
                "halls": {
                    "type":"integer"
                },
                "hallsCapacity": {
                    "type":"array",
                    "items": {
                        "type": "integer"
                    }
                }
            }
        },
        "registerUser": {
            "type":"object",
            "properties":{
                "email": {
                    "type": "string"
                },
                "password": {
                    "type": "string"
                },
                "firstName": {
                    "type": "string"
                },
                "lastName": {
                    "type": "string"
                },
                "mobile": {
                    "type": "string"
                }
            }
        },
        "login": {
            "type":"object",
            "properties":{
                "email": {
                    "type": "string"
                },
                "password": {
                    "type": "string"
                }
            }
        },
        "addShow": {
            "type":"object",
            "properties": {
                "name":{
                    "type":"string"
                },
                "info":{
                    "type":"string"
                },
                "timings":{
                    "type":"array",
                    "items": {
                        "type": "string"
                    }
                },
                "halls":{
                    "type":"array",
                    "items": {
                        "type": "integer"
                    }
                },
                "duration":{
                    "type":"string"
                },
                "rated":{
                    "type":"string"
                },
                "ratings":{
                    "type":"number"
                },
                "seats":{
                    "type":"integer"
                }
            }
        },
        "buyTickets": {
            "type":"object",
            "properties":{
                "seats": {
                    "type": "array",
                    "items": {
                        "type": "integer"
                    }
                }
            }
        }

    }
 }